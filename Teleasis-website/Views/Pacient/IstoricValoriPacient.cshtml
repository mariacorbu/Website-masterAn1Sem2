@{
    ViewData["Title"] = "Valori puls si mediu";
}
<div class="container-acasa"id="container-adaugare-pacienti">
        <div class="formular formular-accesare">

        <div class="row">           
            <div class="col-1 col-md-1 col-sm-1 col-lg-1 div-logo">
                <a href="@Url.Action("AcasaPacient", "Acasa", new{id_pacient = @ViewBag.id_pacient})"><img src="~/images/logo.svg"/></a>
            </div>
            <h1 class="text-center titlu-acasa col-10 titlu-accesare">Valori puls și mediu </h1>        
            <div class="div-buton col-1 col-md-1 col-sm-1 col-lg-1">
                <a role="button" data-bs-toggle="modal"  data-bs-target="#logoutModal" class="btn btn-danger btn-circle "><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
            </div>        
        </div>
  
            <fieldset>

    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item" role="presentation">
          <button class="nav-link active" id="puls-pacient-tab" data-bs-toggle="tab" data-bs-target="#puls-pacient" type="button" role="tab" aria-controls="puls-pacient" aria-selected="true">Valori puls</button>
      <li class="nav-item" role="presentation">
         <button class="nav-link" id="mediu-pacient-tab" data-bs-toggle="tab" data-bs-target="#mediu-pacient" type="button" role="tab" aria-controls="mediu-pacient" aria-selected="false">Valori mediu</button>
    </ul>

    <div class="tab-content">
      <div id="puls-pacient" class="tab-pane fade show active" role="tabpanel" aria-labelledby="puls-pacient-tab">
        <table class="table table-striped" id="tabel-puls">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Valoarea</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var puls in ViewBag.pulsLista)
                    {
                        <tr>
                        <td>@(puls.data)</td>
                        <td>@(puls.value)</td>
                        </tr>

                    }                   
                
            </tbody>
        </table>
      </div>
      <div id="mediu-pacient" class="tab-pane fade" role="tabpanel" aria-labelledby="mediu-pacient-tab">
        <table class="table table-striped" id="tabel-mediu">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Valoare Gaz</th>
                    <th>Valoare Prezenta</th> 
                    <th>Valoare Temperatura</th> 
                    <th>Valoare Umiditate</th> 
                    
                </tr>
            </thead>
            <tbody>
               @foreach(var mediu in ViewBag.mediuLista)
                    {
                        <tr>
                        <td>@(mediu.data)</td>
                        <td>@(mediu.value_gaz)</td>
                        <td>@(mediu.value_prezenta)</td>
                        <td>@(mediu.value_temperatura)</td>
                        <td>@(mediu.value_umiditate)</td>

                        </tr>

                    }      
            </tbody>
        </table>
      </div>
    </div>

      
        
                </fieldset>
    </div>

        <div class="modal fade " id="logoutModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Deconectare</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">   
                        @using (Html.BeginForm("Deconectare", "Acasa", new{id_cont=""}, FormMethod.Post, true, new{id = "formDeconectare"}))
                                {
                            <p>Sunteți sigur că doriți să vă deconectați?</p>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nu</button>
                                    <button class="btn btn-primary" type="submit" id="buttonDaPacient">Da</button>
                                  </div>
                        }

                    </div>
                </div>
            </div>
        </div>




</div>
